{
  "rules": {
    "adminEmails": {
      ".read": "auth != null && root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true",
      ".write": "auth != null && root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true",
      "$email": {
        ".read": "auth != null && root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true",
        ".write": "auth != null && root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true"
      }
    },
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".read": "$uid === auth.uid || (auth != null && (data.child('visible').val() == true || !data.child('visible').exists()) && data.child('timestamp').exists() && (now - data.child('timestamp').val()) <= 180000) || (auth != null && root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true)",
        ".write": "$uid === auth.uid || (auth != null && root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true)",
        ".validate": "newData.hasChildren(['name', 'email']) || !newData.exists() || (auth != null && root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true)"
      }
    },
    "workouts": {
      ".read": "auth != null && root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true",
      "$userId": {
        ".read": "$userId === auth.uid || auth != null",
        ".write": "$userId === auth.uid || (auth != null && root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true)",
        "$workoutId": {
          ".read": "$userId === auth.uid || auth != null",
          ".write": "$userId === auth.uid || (auth != null && root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true)"
        }
      }
    },
    "friendRequests": {
      "$userId": {
        ".read": "$userId === auth.uid",
        ".write": "auth != null",
        "$fromUserId": {
          ".read": "$userId === auth.uid || $fromUserId === auth.uid",
          ".write": "$userId === auth.uid || $fromUserId === auth.uid"
        }
      }
    },
    "friendRequestsOutgoing": {
      "$userId": {
        ".read": "$userId === auth.uid",
        ".write": "auth != null",
        "$toUserId": {
          ".read": "$userId === auth.uid || $toUserId === auth.uid",
          ".write": "$userId === auth.uid || $toUserId === auth.uid"
        }
      }
    },
    "friends": {
      "$userId": {
        ".read": "$userId === auth.uid || auth != null",
        ".write": "auth != null",
        "$friendId": {
          ".read": "$userId === auth.uid || $friendId === auth.uid",
          ".write": "$userId === auth.uid || $friendId === auth.uid"
        }
      }
    },
    "messages": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$conversationId": {
        ".read": "auth != null && root.child('conversations').child($conversationId).child('participants').child(auth.uid).exists()",
        ".write": "auth != null && root.child('conversations').child($conversationId).child('participants').child(auth.uid).exists()",
        "$messageId": {
          ".read": "auth != null && root.child('conversations').child($conversationId).child('participants').child(auth.uid).exists()",
          ".write": "auth != null && root.child('conversations').child($conversationId).child('participants').child(auth.uid).exists() && (data.child('senderId').val() === auth.uid || newData.child('senderId').val() === auth.uid) && !root.child('blockedUsers').child(newData.child('receiverId').val()).child(newData.child('senderId').val()).exists()"
        }
      }
    },
    "conversations": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$conversationId": {
        ".read": "auth != null && data.child('participants').hasChild(auth.uid)",
        ".write": "auth != null && (data.child('participants').hasChild(auth.uid) || newData.child('participants').hasChild(auth.uid))"
      }
    },
    "userConversations": {
      ".write": "auth != null",
      "$userId": {
        ".read": "$userId === auth.uid",
        "$conversationId": {
          ".read": "$userId === auth.uid",
          ".write": "auth != null && ($userId === auth.uid || root.child('conversations').child($conversationId).child('participants').child(auth.uid).exists())",
          ".validate": "newData.hasChildren(['conversationId', 'otherUserId', 'lastMessage', 'lastMessageTime']) && root.child('conversations').child($conversationId).child('participants').hasChild(auth.uid)"
        }
      }
    },
    "events": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$eventId": {
        ".read": "auth != null",
        ".write": "auth != null && ((auth.token.email != null && root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true) || (!data.exists() && newData.child('hostId').val() === auth.uid) || (data.exists() && (data.child('hostId').val() === auth.uid || newData.child('hostId').val() === auth.uid)))",
        "participants": {
          ".read": "auth != null",
          ".write": "auth != null"
        },
        "comments": {
          ".read": "auth != null",
          ".write": "auth != null",
          "$commentId": {
            ".read": "auth != null",
            ".write": "auth != null && (data.child('userId').val() === auth.uid || newData.child('userId').val() === auth.uid || (auth.token.email != null && root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true))"
          }
        }
      }
    },
    "workoutPosts": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$postId": {
        ".read": "auth != null",
        ".write": "auth != null && (data.child('userId').val() === auth.uid || newData.child('userId').val() === auth.uid)",
        "kudos": {
          ".read": "auth != null",
          ".write": "auth != null"
        },
        "comments": {
          ".read": "auth != null",
          ".write": "auth != null",
          "$commentId": {
            ".read": "auth != null",
            ".write": "auth != null && (data.child('userId').val() === auth.uid || newData.child('userId').val() === auth.uid)"
          }
        }
      }
    },
    "checkIns": {
      ".read": "auth != null",
      "$venueId": {
        ".read": "auth != null",
        "$userId": {
          ".read": "auth != null",
          ".write": "auth != null && $userId === auth.uid",
          ".validate": "newData.hasChildren(['userId', 'venueId', 'venueName', 'activity', 'userName', 'timestamp']) && newData.child('userId').val() === auth.uid"
        }
      }
    },
    "eventCheckIns": {
      ".read": "auth != null",
      "$eventId": {
        ".read": "auth != null",
        "$userId": {
          ".read": "auth != null",
          ".write": "auth != null && $userId === auth.uid",
          ".validate": "newData.hasChildren(['userId', 'venueId', 'venueName', 'activity', 'userName', 'timestamp']) && newData.child('userId').val() === auth.uid"
        }
      }
    },
    "pokes": {
      "$recipientId": {
        ".read": "$recipientId === auth.uid",
        ".write": "auth != null",
        "$senderId": {
          ".read": "$recipientId === auth.uid || $senderId === auth.uid",
          ".write": "auth != null && ($recipientId === auth.uid || $senderId === auth.uid)"
        }
      }
    },
    "userVenuePreferences": {
      ".read": "auth != null",
      "$userId": {
        ".read": "auth != null",
        ".write": "$userId === auth.uid"
      }
    },
    "notifications": {
      "$userId": {
        ".read": "$userId === auth.uid",
        ".write": "auth != null",
        "$notificationId": {
          ".read": "$userId === auth.uid",
          ".write": "$userId === auth.uid || newData.child('fromUserId').val() === auth.uid"
        }
      }
    },
    "locationSharing": {
      "$sharerUserId": {
        ".read": "$sharerUserId === auth.uid",
        ".write": "$sharerUserId === auth.uid",
        "$recipientUserId": {
          ".read": "$sharerUserId === auth.uid || $recipientUserId === auth.uid",
          ".write": "$sharerUserId === auth.uid"
        }
      }
    },
    "blockedUsers": {
      "$userId": {
        ".read": "$userId === auth.uid",
        ".write": "$userId === auth.uid",
        "$blockedUserId": {
          ".read": "$userId === auth.uid",
          ".write": "$userId === auth.uid"
        }
      }
    },
    "encounteredUsers": {
      "$userId": {
        ".read": "$userId === auth.uid",
        ".write": "$userId === auth.uid",
        "$encounteredUserId": {
          ".read": "$userId === auth.uid",
          ".write": "$userId === auth.uid",
          ".validate": "!newData.exists() || (newData.hasChildren(['userId', 'encounteredAt', 'lastSeenAt', 'distance', 'lat', 'lng', 'count']) && newData.child('userId').val() === $encounteredUserId && newData.child('encounteredAt').val() > 0 && newData.child('lastSeenAt').val() > 0 && newData.child('distance').val() >= 0 && newData.child('count').val() > 0)"
        }
      }
    },
    "reports": {
      ".read": "auth != null && root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true",
      ".write": "auth != null",
      "$reportId": {
        ".read": "auth != null && root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true",
        ".write": "auth != null && (newData.child('reporterId').val() === auth.uid || root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true)",
        ".validate": "(newData.hasChildren(['reporterId', 'reportedUserId', 'reason', 'reportedAt']) && newData.child('reporterId').val() === auth.uid && newData.child('reportedUserId').val() != null && newData.child('reason').val() != null && newData.child('reportedAt').val() > 0) || (auth != null && root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true)"
      }
    },
    "systemSettings": {
      ".read": "auth != null && root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true",
      ".write": "auth != null && root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true"
    },
    "venueRequests": {
      ".read": "auth != null && root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true",
      ".write": "auth != null",
      "$requestId": {
        ".read": "auth != null && root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true",
        ".write": "auth != null && (newData.child('userId').val() === auth.uid || root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true)",
        ".validate": "(newData.hasChildren(['id', 'userId', 'venueName', 'location', 'status', 'createdAt']) && newData.child('userId').val() === auth.uid && newData.child('status').val() === 'pending') || (auth != null && root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true)"
      }
    },
    "venues": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true",
      "$venueId": {
        ".read": "auth != null",
        ".write": "auth != null && root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true",
        ".validate": "newData.hasChildren(['id', 'name', 'description', 'lat', 'lng', 'radius', 'category', 'city'])"
      }
    },
    "challengeZones": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true",
      "$zoneId": {
        ".read": "auth != null",
        ".write": "auth != null && root.child('adminEmails').child(auth.token.email.replace('.', '_').replace('#', '_').replace('$', '_').replace('[', '_').replace(']', '_')).val() == true",
        ".validate": "newData.hasChildren(['id', 'name', 'description', 'lat', 'lng', 'radius', 'points', 'active', 'visible', 'createdAt'])"
      }
    },
    "challengeParticipation": {
      ".read": "auth != null",
      "$userId": {
        ".read": "$userId === auth.uid || auth != null",
        ".write": "auth != null",
        "$zoneId": {
          ".read": "$userId === auth.uid || auth != null",
          ".write": "auth != null",
          "$date": {
            ".read": "$userId === auth.uid || auth != null",
            ".write": "auth != null && $userId === auth.uid",
            ".validate": "newData.hasChildren(['userId', 'zoneId', 'date', 'workoutId', 'timestamp', 'points']) && newData.child('userId').val() === auth.uid"
          }
        }
      }
    },
    "challengeLeaderboards": {
      ".read": "auth != null",
      "$zoneId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "$userId": {
          ".read": "auth != null",
          ".write": "auth != null",
          ".validate": "newData.hasChildren(['userId', 'zoneId', 'totalPoints', 'workoutsCount', 'lastWorkoutDate'])"
        }
      }
    },
    "emailOTPSignIn": {
      ".read": true,
      ".write": true,
      "$emailKey": {
        ".read": true,
        ".write": true,
        ".validate": "newData.hasChildren(['code', 'email', 'createdAt', 'expiresAt', 'attempts']) && newData.child('code').val().matches(/^\\d{6}$/) && newData.child('email').val().matches(/^[^@]+@[^@]+\\.[^@]+$/) && newData.child('createdAt').val() > 0 && newData.child('expiresAt').val() > newData.child('createdAt').val() && newData.child('attempts').val() >= 0"
      }
    },
    "emailVerifications": {
      ".read": true,
      ".write": true,
      "$emailKey": {
        ".read": true,
        ".write": true,
        ".validate": "newData.hasChildren(['code', 'email', 'createdAt', 'expiresAt', 'attempts']) && newData.child('code').val().matches(/^\\d{6}$/) && newData.child('email').val().matches(/^[^@]+@[^@]+\\.[^@]+$/) && newData.child('createdAt').val() > 0 && newData.child('expiresAt').val() > newData.child('createdAt').val() && newData.child('attempts').val() >= 0"
      }
    }
  }
}

